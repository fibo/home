# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true

[*{.conf,.pl,.pm,.py}]
indent_size = 4

[*{.glsl,.go,.sh,.sql}]
indent_style = tab

[Makefile]
indent_style = tab

