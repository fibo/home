# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*.jade]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.js]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{pl,pm}]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.py]
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.yaml]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[Makefile]
indent_style = tab
trim_trailing_whitespace = true

[package.json]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[.travis.yml]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
