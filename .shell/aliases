
alias clean_tmp='find /tmp/ -mindepth 1 -maxdepth 1 -user $USER -exec rm -vrf {} \;'

alias base16-shell_colortest='~/.shell/base16-shell/colortest ~/.shell/base16-shell/base16-${BASE16_SHELL_THEME}.sh'

alias mvim='mvim +:NERDTree'

alias ga='git add .; git number'
alias gb='git branch -a'
alias gc='git commit'
alias gcb='git checkout -b'
alias gd='git diff'
alias gl='git log'
alias gm='git merge'
alias gn='git number'
alias gna='git number add'
alias gnb='git number blame'
alias gpl='git pull'
alias gps='git push'
alias gr='git remote -v'
alias gs='git number' # same as git status, plus numbered files
alias vn='git number -c vim'

alias gh-pages-push='git subtree --prefix gh-pages push origin gh-pages'
alias gh-pages-pull='git subtree --prefix gh-pages pull origin gh-pages'

alias l='ls -lrth'
alias ll='ls -lrtha'

alias vi='vim'

alias sls='screen -ls'
alias ss='screen -S'
alias sx='screen -x'

# Do not use sudo, use ssh to switch user
#     u user
alias u='ssh localhost -l'

# Load local aliases, can override current aliases.

if [ -e ~/.shell/aliases.local ]; then
	source ~/.shell/aliases.local
fi

